#!/usr/bin/env php
<?php

require 'vendor/autoload.php';

use SilverStripe\SSPak\Console\Application;
use SilverStripe\SSPak\Console\Command\SaveCommand;

$application = new Application();
$application->setBasePath(dirname(dirname(__FILE__)));

// ... register commands
$application->add(new SaveCommand());

$application->run();
